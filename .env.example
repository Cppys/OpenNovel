# =============================================================================
# OpenNovel 配置文件
# 复制为 .env 后修改，Claude 认证由 Claude Code CLI 自动处理，无需 API Key
# =============================================================================

# ---------------------------------------------------------------------------
# 模型配置 — 每个 Agent 可独立指定模型
# 推荐高质量模型用于写作/规划，轻量模型用于记忆管理
# ---------------------------------------------------------------------------

# 写作 Agent（WriterAgent）— 核心创作，推荐最强模型
LLM_MODEL_WRITING=claude-opus-4-6

# 编辑 Agent（EditorAgent）— 润色文本、调整字数
LLM_MODEL_EDITING=claude-opus-4-6

# 审稿 Agent（ReviewerAgent）— 多维度质量评估
LLM_MODEL_REVIEWING=claude-opus-4-6

# 类型研究 Agent（GenreResearchAgent）— 分析类型与读者期待
LLM_MODEL_GENRE_RESEARCH=claude-opus-4-6

# 故事架构 Agent（StoryArchitectAgent）— 构建故事结构与角色体系
LLM_MODEL_STORY_ARCHITECT=claude-opus-4-6

# 冲突设计 Agent（ConflictDesignAgent）— 设计章节大纲与冲突节奏
LLM_MODEL_CONFLICT_DESIGN=claude-opus-4-6

# 记忆管理 Agent（MemoryManagerAgent / Summarizer）— 摘要与上下文管理
# 任务简单，可用更快更便宜的模型
LLM_MODEL_MEMORY=claude-haiku-4-5

# ---------------------------------------------------------------------------
# 数据存储路径
# ---------------------------------------------------------------------------
SQLITE_DB_PATH=./data/novels.db
CHROMA_PERSIST_DIR=./data/chroma

# ---------------------------------------------------------------------------
# 浏览器自动化（番茄小说发布功能）
# ---------------------------------------------------------------------------
BROWSER_USER_DATA_DIR=./data/browser_profile

# ---------------------------------------------------------------------------
# 发布设置
# ---------------------------------------------------------------------------
# 默认发布模式：draft（仅存草稿）| publish（直接发布）
DEFAULT_PUBLISH_MODE=draft

# 是否声明为 AI 生成内容
DECLARE_AI_CONTENT=true

# ---------------------------------------------------------------------------
# 章节设置
# ---------------------------------------------------------------------------
# 章节字数范围（用于字数达标检查）
CHAPTER_MIN_CHARS=2050
CHAPTER_MAX_CHARS=2300

# 审稿不通过时最大重写次数
MAX_REVISIONS=3

# ---------------------------------------------------------------------------
# 记忆与上下文
# ---------------------------------------------------------------------------
# 每写 N 章触发一次全局一致性审查
GLOBAL_REVIEW_INTERVAL=5

# 传给写作 Agent 的最大上下文字符数
CONTEXT_MAX_CHARS=3000
